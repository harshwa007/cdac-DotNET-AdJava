@{
    ViewData["Title"] = "Update Details";
}
<script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TimeSheetSoln.styles.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</script>

<div class="text-center">
    <fieldset>
        <legend>Update TimeSheet</legend>
        <form method="post">
            Enter Date: <input type="text" name="u1"> <br> <br>
            Enter Work Description: <input type="text" name="u2"> <br><br>
            Enter Duration in hourse: <input type="text" name="u3"> <br><br>
            Select status  @*<input type="text" name="i4"> *@
            <select name="u4" id="i1">
                <option value="completed">completed</option>
                <option value="not completed">not completed</option>
                <option value="in Progress">in Progress</option>
            </select>
            <br><br>
            <input type="submit" value="Update Time Sheet" class="btn btn-success">
        </form>
    </fieldset>
</div>