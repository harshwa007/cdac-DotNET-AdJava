@using BOL;
@{
    ViewData["Title"] = "Show TimeSheet";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
<div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
    <ul class="navbar-nav flex-grow-1">
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-controller="Time" asp-action="Insert">Insert Details</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-controller="Time" asp-action="Show">TimeSheets</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-controller="Time" asp-action="Update">Update Details</a>
        </li>
    </ul>
</div>

<div class="container mt-3">
    <table class="table table-dark table-striped">
        <thead>
            <tr>
                <th>Date</th>
                <th>Work Description</th>
                <th>Duration in hour</th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody>
            @{
                List<TimeSheet> list = (List<TimeSheet>)ViewData["b"];
                foreach (TimeSheet t in list)
                {
                    <tr>
                        <td>@t.TDate</td>
                        <td>@t.TWorkDesc</td>
                        <td>@t.Duration</td>
                        <td>@t.Status</td>
                    </tr>
                }
            }

        </tbody>
    </table>
</div>